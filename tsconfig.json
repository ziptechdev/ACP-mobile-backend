{
  "compilerOptions": {
    "strictNullChecks": false,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/tests"]
}
