{
  "name": "acp-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "start": "node dist/index.js",
    "knex": "knex",
    "dev": "nodemon",
    "build": "npm-run-all clean tsc",
    "tsc": "tsc --build tsconfig.json",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "migrate:make": "knex migrate:make --knexfile src/knexfile.ts",
    "migrate:make:prod": "knex migrate:make --knexfile dist/knexfile.js --env production",
    "migrate:run": "knex migrate:latest --knexfile src/knexfile.ts",
    "migrate:run:prod": "knex migrate:latest --knexfile dist/knexfile.js --env production",
    "migrate:rollback": "knex migrate:rollback --knexfile src/knexfile.ts",
    "migrate:rollback:prod": "knex migrate:rollback --knexfile dist/knexfile.js --env production",
    "migrate:rollback:step": "knex-migrate down --knexfile src/knexfile.ts --step",
    "migrate:rollback:step:prod": "knex-migrate down --knexfile dist/knexfile.js --step --env production",
    "migrate:status": "knex migrate:currentVersion --knexfile src/knexfile.ts",
    "migrate:status:prod": "knex migrate:currentVersion --knexfile dist/knexfile.js --env production",
    "seed:make": "knex seed:make --knexfile src/knexfile.ts",
    "seed:make:prod": "knex seed:make --knexfile dist/knexfile.js --env production",
    "seed:run": "knex seed:run --knexfile src/knexfile.ts",
    "seed:run:prod": "knex seed:run --knexfile dist/knexfile.js --env production",
    "test": "jest --no-cache -i",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.3",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-openapi-validator": "^4.13.8",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "http-status": "^1.5.3",
    "knex": "^2.3.0",
    "knex-migrate": "^1.7.4",
    "lodash": "^4.17.21",
    "objection": "^3.0.1",
    "openapi": "^1.0.1",
    "pg": "^8.8.0",
    "swagger-ui-express": "^4.5.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.8.3",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "16.11.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
